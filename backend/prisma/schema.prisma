generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  createIn DateTime @default(now())
  Task     Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  task      String
  status    String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  createIn  DateTime @default(now())
  updatedAt DateTime @updatedAt
}
